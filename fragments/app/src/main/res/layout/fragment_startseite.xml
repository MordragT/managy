<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Startseite"
    android:background="#bebebe"
    android:orientation="horizontal"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/frag_startseite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- Frist -->
    <TextView
        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#696969"
        android:layout_marginTop="25dp"
        android:text="Nächste Frist:"
        android:gravity="center_horizontal"
        />

    <TextView

        android:layout_width="325dp"
        android:layout_height="100dp"
        android:background="#708090"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/FristStart"
        />

    <!-- Termin -->
    <TextView
        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#696969"
        android:layout_marginTop="175dp"
        android:text="Nächster Termin:"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:background="#708090"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:text="@string/TerminStart"
        />

    <!-- To-Do -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#696969"
        android:layout_marginTop="325dp"
        android:text="To-Do:"
        android:gravity="center_horizontal"
        android:layout_marginRight="88dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="#708090"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:layout_marginRight="88dp"
        android:text="@string/ToDoStart"
        />

    <!-- Literatur -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#696969"
        android:layout_marginTop="325dp"
        android:text="Literatur:"
        android:gravity="center_horizontal"
        android:layout_marginLeft="88dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="#708090"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="88dp"
        android:text="@string/LiteraturStart"
        />
    <!-- Tipp -->
    <TextView
        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#696969"
        android:layout_marginTop="450dp"
        android:text="Tipp:"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/TippsStart"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:background="#708090"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="475dp"
        android:text="@string/TippStart"
        />

</FrameLayout>