<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".literatur_add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1mm"
                android:text="Titel:   "
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/literatur_add_EditTitel"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:ems="10"
                android:hint="Titel eingeben"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor:   "
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/literatur_add_EditAutor"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Autor eingeben"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/URL"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1mm"
                android:text="URL:          "
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/literatur_add_EditURL"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:ems="10"
                android:hint=" URL eingeben"
                android:inputType="textPersonName"
                android:paddingLeft="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Notizen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1mm"
                android:text="Notizen:"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/literatur_add_EditNotizen"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ems="10"
                android:hint="Notizen eingeben"
                android:inputType="textPersonName" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/literatur_add_abbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_weight="1"
            android:text="Abbrechen" />

        <Button
            android:id="@+id/literatur_add_speichern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_weight="1"
            android:text="Speichern" />

    </LinearLayout>

</FrameLayout>